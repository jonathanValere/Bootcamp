<% layout("layouts/boilerplate"); %>
<div class="row">
	<div class="col-6 offset-3">
		<h1 class="text-center">New campground</h1>
		<form action="/campgrounds" method="post">
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input class="form-control" type="text" name="campground[title]" id="title">
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input class="form-control" type="text" name="campground[location]" id="location">
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Image URL</label>
				<input class="form-control" type="text" name="campground[image]" id="image">
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea class="form-control" type="text" name="campground[description]" id="description"></textarea>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Price</label>
				<div class="input-group">
				  	<input type="text" class="form-control" id="price" placeholder="0" aria-label="price" aria-describedby="price-label">
				  	<span class="input-group-text" id="price-label">â‚¬</span>
				</div>
			</div>
			<div class="mb-3">
				<button type="submit" class="btn btn-success">Add campground</button>
			</div>
		</form>
		<a href="/campgrounds">All campgrounds</a>	
	</div>
</div>
